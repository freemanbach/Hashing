<Window x:Class="Hashing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hashing"
        mc:Ignorable="d"
        Title="Hashing Application" Height="440" Width="750"
        Loaded="Form_Load">
        
    <Grid Background="Aqua">
        <TextBox x:Name="txtFile" HorizontalAlignment="Left" Margin="89,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="26" FontFamily="Tahoma"/>
        <Label x:Name="lblFile" Content="File:" HorizontalAlignment="Left" Margin="36,86,0,0" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="14"/>
        <ComboBox x:Name="shavalues" HorizontalAlignment="Left" Margin="279,86,0,0" VerticalAlignment="Top" Width="160" Height="26" SelectionChanged="shavalues_SelectionChanged"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Height="25" Margin="79,241,0,0" VerticalAlignment="Top" Width="85" Click="btnExit_Click"/>

    </Grid>
</Window>
